{
  "env": {
    "node": true,
    "es2021": true,
    "jest": true
  },
  "extends": ["standard"],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "jest", "unused-imports"],
  "rules": {
    "semi": [2, "always"],
    "space-before-function-paren": "off",
    "no-trailing-spaces": "off",
    "no-unused-vars": "warn",
    "unused-imports/no-unused-imports": "warn"
  }
}
